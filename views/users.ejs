<% if (msg.length !== 0) { %>
  <div class="alert alert-success col-md-6" role="alert">
    <%= msg %> 
  </div>
  <% } %>
<div class="col-md-6" role="alert">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Nama</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
  <% users.forEach((user, index) => { %>
    <tbody>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= user.nama %> </td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <a href="/ubahUser"><span class="badge text-bg-success">ubah</span></a>

          <form action="/hapusUser?_method=DELETE" method="post" class="d-inline">
              <input type="hidden" name="nama">
              <button type="submit" class="badge text-bg-danger" value="<%= user.nama %>" onclick="return confirm(`User <%= user.nama %> akan dihapus ?`);">hapus</button>
          </form>
      </td>
      </tr>
    </tbody>
  <% }) %>
  </table>
</div>
